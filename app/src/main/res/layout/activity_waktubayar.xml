<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waktubayar"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:fontFamily="@font/mollenpersonaluseregularbol"
        android:text="Pembayaran"
        android:paddingLeft="30dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey_font"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorYellow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorIjo"
        android:text="Selamat pesanan anda telah berhasil"
        android:fontFamily="@font/mollenpersonaluseregular"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorGray"
        android:text="Batas waktu pembayaran dan konfirmasi, 1 Jam setelah pemesanan"
        android:fontFamily="@font/mollenpersonaluseregular"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorIjo"
        android:text="Detail Pemesanan"
        android:fontFamily="@font/mollenpersonaluseregular"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorYellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Rp. 200.000"
            android:fontFamily="@font/mollenpersonaluseregularbol"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran via"
            android:fontFamily="@font/mollenpersonaluseregular"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Gopay"
            android:fontFamily="@font/mollenpersonaluseregularbol"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Batas waktu pembayaran"
            android:fontFamily="@font/mollenpersonaluseregular"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="20.15 WIB"
            android:fontFamily="@font/mollenpersonaluseregularbol"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="@color/merah"
            android:textSize="12sp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Close"
        android:background="@drawable/shape1"
        android:textColor="@color/colorWhite"
        android:layout_gravity="end"/>



</LinearLayout>