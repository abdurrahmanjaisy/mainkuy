<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logosignup"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/hider"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="335.65dp"
            android:layout_below="@id/logosignup"
            android:layout_height="54.8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/loginnama"
            android:layout_centerHorizontal="true"
            android:hint="Nama Pengguna"
            android:fontFamily="@font/sfprotext"
            android:gravity="center"
            android:inputType="text"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="335.65dp"
            android:layout_below="@id/nama"
            android:layout_height="54.8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginnama"
            android:layout_centerHorizontal="true"
            android:hint="Email"
            android:gravity="center"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/kataSandi"
            android:layout_width="335.65dp"
            android:layout_below="@id/email"
            android:layout_height="54.8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginnama"
            android:layout_centerHorizontal="true"
            android:hint="Kata Sandi"
            android:gravity="center"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/ketikUlang"
            android:layout_width="335.65dp"
            android:layout_below="@id/kataSandi"
            android:layout_height="54.8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginnama"
            android:layout_centerHorizontal="true"
            android:hint="Ketik Ulang Kata Sandi"
            android:gravity="center"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/masuk"
            android:layout_width="200dp"
            android:layout_height="54.8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ketikUlang"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape"
            android:text="masuk"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="@font/sfprotext"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/daftar"
            android:layout_width="200dp"
            android:layout_height="54.8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/masuk"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginnama"
            android:text="DAFTAR"
            android:textColor="@color/colorIjo"
            android:textStyle="bold"
            android:fontFamily="@font/sfprotext"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/logoawal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_proyek" />

    </RelativeLayout>


</LinearLayout>