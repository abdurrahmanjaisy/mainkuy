<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modalpesan"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Pesan Sekarang"
            android:layout_gravity="center"
            android:background="@color/colorIjo"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/mollenpersonaluseregularbol"/>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tempat Futsal"
                android:fontFamily="@font/mollenpersonaluseregularbol"
                />
            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modalpesen"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Alamat"
                android:fontFamily="@font/mollenpersonaluseregularbol"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modalpesen"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Pilih Lapangan"
                android:fontFamily="@font/mollenpersonaluseregularbol"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="37dp"
                android:background="@drawable/modalpesen"
                android:text="Lapangan A"
                android:gravity="center"
                android:textColor="@color/grey_font"
                android:textSize="13sp"
                android:fontFamily="@font/mollenpersonaluseregular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Pilih Tanggal dan Waktu"
                android:fontFamily="@font/mollenpersonaluseregularbol"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="165dp"
                    android:layout_height="37dp"
                    android:background="@drawable/modalpesen"
                    android:text="12/00/2019"
                    android:gravity="center"
                    android:textColor="@color/grey_font"
                    android:fontFamily="@font/mollenpersonaluseregular"/>

                <TextView
                    android:id="@+id/jam"
                    android:fontFamily="@font/mollenpersonaluseregular"
                    android:layout_width="165dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_toEndOf="@+id/tanggal"
                    android:layout_toRightOf="@+id/tanggal"
                    android:background="@drawable/modalpesen"
                    android:gravity="center"
                    android:textColor="@color/grey_font"
                    android:text="20.00" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Pilih Durasi"
                android:fontFamily="@font/mollenpersonaluseregularbol"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/durasi"
                    android:layout_width="85dp"
                    android:layout_height="37dp"
                    android:background="@drawable/modalpesen"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/grey_font"
                    android:fontFamily="@font/mollenpersonaluseregular"/>

                <TextView
                    android:id="@+id/durasion"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/mollenpersonaluseregular"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_toRightOf="@+id/durasi"
                    android:text="jam"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_toRightOf="@+id/durasion"
                    android:text="Tersedia"
                    android:layout_marginLeft="37dp"
                    android:textColor="@color/colorIjo"
                    android:gravity="center"
                    android:fontFamily="@font/mollenpersonaluseregularbol"/>
                </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tarif per jam"
                android:layout_centerVertical="true"
                android:fontFamily="@font/mollenpersonaluseregularbol" />

            <TextView
                android:id="@+id/tarifpj"
                android:layout_width="149dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/modalpesen"
                android:fontFamily="@font/mollenpersonaluseregular"
                android:gravity="center"
                android:textColor="@color/grey_font" />

            <TextView
                android:id="@+id/rupiah"
                android:layout_toLeftOf="@+id/tarifpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:text="Rp."
                android:layout_centerVertical="true"
                android:fontFamily="@font/mollenpersonaluseregular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tariftotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tarif total"
                android:layout_centerVertical="true"
                android:fontFamily="@font/mollenpersonaluseregularbol" />

            <TextView
                android:id="@+id/tariftotall"
                android:layout_width="149dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/modalpesen"
                android:fontFamily="@font/mollenpersonaluseregular"
                android:gravity="center"
                android:textColor="@color/grey_font" />

            <TextView
                android:id="@+id/rupiahtotal"
                android:layout_toLeftOf="@+id/tariftotall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:text="Rp."
                android:layout_centerVertical="true"
                android:fontFamily="@font/mollenpersonaluseregular" />

        </RelativeLayout>

        <Button
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="pesan sekarang"
            android:fontFamily="@font/mollenpersonaluseregularbol"
            android:background="@drawable/shape"
            android:textColor="@color/colorWhite"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>